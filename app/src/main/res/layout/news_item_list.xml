<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/news_card">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:id="@+id/newsImage"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rockets vs. Warriors"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_toRightOf="@+id/newsImage"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:textSize="16sp"
                android:id="@+id/newsTitle"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_below="@+id/newsTitle"
                android:layout_toRightOf="@id/newsImage"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:text="Tonight James Harden and the Rockets will be against Kawhai Leonard and the Spurs"
                android:id="@+id/newsDescription"
                android:textSize="12dp"/>


        </RelativeLayout>
        <View
            android:layout_width="320dp"
            android:layout_height="1dp"
            android:alpha=".5"
            android:background="#D2ccb7"
            android:layout_gravity="bottom|center"
            android:layout_marginTop="150dp"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="10dp"
        android:id="@+id/newsLink">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click here to see full story"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:id="@+id/newsLinkText"
            android:textColor="@color/colorPrimaryDark"/>
    </LinearLayout>

</android.support.v7.widget.CardView>